<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Municipio" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editIdMunicipio"
            android:inputType="textPersonName"
            android:maxLength="4" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:onClick="consultarMunicipio"
            android:text="Consultar" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:onClick="limpiarTexto"
            android:text="limpiar" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Departamento" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editIdDepartamento"
            android:inputType="textPersonName"
            android:maxLength="3"

            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Municipio" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editNomMunicipio"
            android:inputType="textPersonName"
            android:maxLength="4"

            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </TableRow>

</LinearLayout>