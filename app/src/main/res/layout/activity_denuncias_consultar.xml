<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Denuncia" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editIdDenuncia"
            android:inputType="textPersonName"
            android:maxLength="5" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="consultarDenuncias"
            android:text="Consultar" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="limpiarTexto"
            android:text="limpiar" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Usuario" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editIdUsuarioDenuncia"
            android:inputType="textPersonName"
            android:maxLength="5" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Local" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editIdLocalDenuncia"
            android:inputType="textPersonName"
            android:maxLength="5" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Denuncia" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editTextDenuncia"
            android:inputType="textPersonName"
            android:maxLength="30" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editFechaDenuncia"
            android:inputType="textPersonName"/>
    </TableRow>

</LinearLayout>