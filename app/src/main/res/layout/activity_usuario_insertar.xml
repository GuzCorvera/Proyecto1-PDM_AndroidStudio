<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Usuario" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editIdUsuario"
            android:inputType="textPersonName"
            android:maxLength="5" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Tipo de Usuario" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editIdTipoUsuario"
            android:inputType="textPersonName"
            android:maxLength="4" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Empresa" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editIdEmpresa"
            android:inputType="textPersonName"
            android:maxLength="5" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de Usuario" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editNomUsuario"
            android:inputType="textPersonName"
            android:maxLength="30" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ContraseÃ±a del Usuario" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editContraUsuario"
            android:inputType="textPersonName"
            android:maxLength="30" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo del Usuario" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editCorreoUsuario"
            android:inputType="textPersonName"
            android:maxLength="50" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:onClick="insertarUsuario"
            android:text="Insertar" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:onClick="limpiarTexto"
            android:text="limpiar" />
    </TableRow>

</LinearLayout>