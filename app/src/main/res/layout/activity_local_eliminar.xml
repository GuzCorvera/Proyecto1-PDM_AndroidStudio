<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Local" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editIdLocal"
            android:inputType="textPersonName"
            android:maxLength="5" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Empresa" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editIdEmpresa"
            android:inputType="textPersonName"
            android:maxLength="5" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Sector" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editIdSector"
            android:inputType="textPersonName"
            android:maxLength="4" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Id Munincipio" />

        <EditText
            android:layout_marginHorizontal="5dp"
            android:id="@+id/editIdMunicipio"
            android:inputType="textPersonName"
            android:maxLength="3" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:onClick="eliminarLocal"
            android:text="Eliminar" />
    </TableRow>

</LinearLayout>